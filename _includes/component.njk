<main class="codium-content-page light">
	<h2>Code example</h2>
	<style>
		#display-content {
			{% if not hideBackgroundInExample %}
			background-image: url('{{backgroundImage}}');
			{% endif %}
			padding-top: 5em;
			padding-bottom: 5em;
		}
	</style>

	<!-- Source Code Section -->
	<section class="dark">
	{% highlight "html" %}
	{{ content | safe }}
	{% endhighlight %}
	</section>

	<section 
	{% if not hideBackgroundInExample %}
		class="dark" 
	{% endif %}
	id="display-content">
		{{content | safe}}
	</section>
</main>